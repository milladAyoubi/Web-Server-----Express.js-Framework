<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <div class="topnav ">
            <a href="http://localhost:3000/">Home</a>



        </div>
        <div class='titlePage'>

            <h3,class="display-3">{{title}}</h3,class=>
                <p class="lead">{{subTitle}}</p>
                <hr class="my-2">


                <form>

                    <div class="form-group">

                        <input type="text" class="formInput" id="weatherInput"
                            placeholder="Enter Location Like New York!">

                    </div>


                </form>



                <a type="submit" class="btn btn-primary btn-lg" href="#" role="button">{{btnName}}</a>

        </div>
        <div class="weatherInfo">


            <div class="row Service" id="Service">
                <div class="col-sm-4">
                    <div class="card">
                        <h2>Location</h2>
                        <div class="cardImg">
                            <img src="https://img.icons8.com/color/48/000000/city.png" />
                        </div>

                        <p id='view1' class="bold">
                        </p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="card">
                        <h2>Forcast</h2>
                        <div class="cardImg">
                            <img src="https://img.icons8.com/color/48/000000/chance-of-storm.png" />
                        </div>

                        <p id='view2' class="bold">
                        </p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="card">
                        <h2>Country</h2>
                        <div class="cardImg">
                            <img src="https://img.icons8.com/color/48/000000/country.png" />
                        </div>

                        <p id='view3' class="bold">
                        </p>

                    </div>
                </div>
            </div>
        </div>

    </div>

</div>